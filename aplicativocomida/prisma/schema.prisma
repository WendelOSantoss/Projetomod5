// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator erd {
  provider = "prisma-erd-generator"
  output   = "../db.png"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @unique
  name                String
  email               String   @unique
  password            String
  cpf                 String   @unique
  role                String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  ProfileRestaurant   Profile? @relation(fields: [ProfileRestaurantId], references: [id], name: "Profile Restaurant", onDelete: Cascade)
  ProfileRestaurantId String?
  ProfileConsumer     Profile? @relation(fields: [ProfileConsumerId], references: [id], name: "Profile Consumer", onDelete: Cascade)
  ProfileConsumerId   String?
}

model Profile {
  id         String @id @unique
  name       String
  image      String
  type       String
  Adress     String
  restaurant User[] @relation(name: "Profile Restaurant")
  consumer   User[] @relation(name: "Profile Consumer")
  menu       Menu[]
}

model Menu {
  id            String   @id @unique
  profileId     String
  profile       Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  foodName      String
  accompaniment String[]
  price         String[]
}
